import os
Import('common_env')

include_paths = ['.']
common_env.Append( CPPPATH = [ os.path.abspath(p) for p in include_paths ] )

Export('common_env')

cxx_sources = Glob('*.cxx')
c_sources = Glob('*.c')

objects = [ env.Object(s) for s in cxx_sources ] + [ env.Object(s) for s in c_sources ]

Return('objects')
